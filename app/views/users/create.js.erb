<% unless @user.valid? %>
if (!document.getElementById('alert-success').classList.contains('hidden'))
{
    document.getElementById('alert-success').classList.add('hidden')
}
if (document.getElementById('alert').classList.contains('hidden'))
{
    document.getElementById('alert').classList.remove('hidden')
}
document.getElementById('label-alert').innerText = '<%= @user.errors.full_messages.first %>'
<% else %>
if (!document.getElementById('alert').classList.contains('hidden'))
{
    document.getElementById('alert').classList.add('hidden')
}
document.getElementById('alert-success').classList.remove('hidden')
<% end %>
